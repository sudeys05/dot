
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": false,
    "outDir": "../dist/server",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../client/src/*"],
      "@/components/*": ["../client/src/components/*"],
      "@/lib/*": ["../client/src/lib/*"],
      "@/hooks/*": ["../client/src/hooks/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "../dist",
    "../build"
  ]
}
